#include <stdio.h>

int main()
{
   //Write a program in C to find the length of a string without using library function.
   char arr[50], counter = 0;
   
   printf("Enter a string: ");
   fgets(arr, 50, stdin);
   
   for (int i = 0; arr[i] != '\0'; i++)
   {
       counter++;
   }
   
   printf("Length of string: %d", counter-1); //fgets reads a \n char, so subtract 1  


    return 0;
}
